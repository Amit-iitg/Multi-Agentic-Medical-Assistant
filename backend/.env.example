# =================================
# Multi-Agentic Medical Assistant
# Environment Configuration
# =================================

# =============================
# REQUIRED API KEYS
# =============================

# Groq API Configuration
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Tavily Search API Configuration  
# Get your API key from: https://tavily.com/
TAVILY_API_KEY=your_tavily_api_key_here

# =============================
# LLM MODEL CONFIGURATION
# =============================

# Primary LLM Model for text processing
# Available models: llama-3.3-70b-versatile, llama3-70b-8192, mixtral-8x7b-32768
LLM_MODEL_NAME=llama-3.3-70b-versatile

# Vision Model for image analysis
# Available models: llama-3.2-11b-vision-preview, meta-llama/llama-4-scout-17b-16e-instruct
VISION_MODEL_NAME=meta-llama/llama-4-scout-17b-16e-instruct

# =============================
# OPTIONAL CONFIGURATIONS
# =============================

# Server Configuration
# HOST=0.0.0.0
# PORT=8000
# WORKERS=1

# LLM Parameters
# TEMPERATURE=0.3
# MAX_TOKENS=1024
# TOP_P=0.9

# RAG Configuration
# CHUNK_SIZE=1000
# CHUNK_OVERLAP=200
# SIMILARITY_THRESHOLD=0.7
# MAX_RETRIEVED_DOCS=5

# Image Processing
# MAX_IMAGE_SIZE_MB=10
# SUPPORTED_FORMATS=JPEG,PNG,BMP,GIF
# IMAGE_RESIZE_WIDTH=500

# Web Search Configuration
# MAX_SEARCH_RESULTS=5
# SEARCH_TIMEOUT_SECONDS=10

# Vector Database Configuration
# CHROMA_PERSIST_DIRECTORY=./rag_db
# EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Session Management
# SESSION_TIMEOUT_MINUTES=60
# MAX_MEMORY_MESSAGES=50

# =============================
# DEVELOPMENT SETTINGS
# =============================

# Debug Mode (set to true for development)
# DEBUG=false

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO

# CORS Settings (comma-separated origins)
# ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================
# SECURITY SETTINGS
# =============================

# Guardrails Configuration
# ENABLE_GUARDRAILS=true
# CONTENT_FILTER_STRICT=true

# Rate Limiting (requests per minute)
# RATE_LIMIT_PER_MINUTE=100

# File Upload Security
# MAX_FILE_SIZE_MB=10
# ALLOWED_FILE_TYPES=image/jpeg,image/png,image/bmp,image/gif

# =============================
# EXTERNAL SERVICE TIMEOUTS
# =============================

# API timeout settings (in seconds)
# GROQ_TIMEOUT=30
# TAVILY_TIMEOUT=15
# IMAGE_PROCESSING_TIMEOUT=60

# =============================
# DATABASE SETTINGS
# =============================

# ChromaDB Configuration
# CHROMA_HOST=localhost
# CHROMA_PORT=8000
# CHROMA_COLLECTION_NAME=medical_docs

# =============================
# MONITORING & ANALYTICS
# =============================

# Optional: Analytics and monitoring
# ANALYTICS_ENABLED=false
# SENTRY_DSN=your_sentry_dsn_here
# TELEMETRY_ENABLED=false

# =============================
# BACKUP & RECOVERY
# =============================

# Backup settings
# AUTO_BACKUP_ENABLED=false
# BACKUP_INTERVAL_HOURS=24
# BACKUP_RETENTION_DAYS=30

# =============================
# NOTES
# =============================

# 1. GROQ_API_KEY and TAVILY_API_KEY are REQUIRED for the application to function
# 2. Copy this file to .env and fill in your actual API keys
# 3. Never commit your .env file to version control
# 4. Restart the server after changing environment variables
# 5. For production deployment, consider using proper secret management
# 6. Check API quotas and rate limits for your chosen service plans
# 7. Some models may require different API endpoints or authentication methods